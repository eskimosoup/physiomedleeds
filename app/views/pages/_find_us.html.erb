<%= javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key=AIzaSyB17DHQsvJ5Q1Inc7mb5SnfFoieHeILmq0&sensor=false' %>
<script>
// Enable the visual refresh
google.maps.visualRefresh = true;

var map;
function initialize() {

  var lLatLng = new google.maps.LatLng(53.777003,-1.584418);
  var gLatLng = new google.maps.LatLng(53.872723,-1.707391);

  var lmapOptions = {
    zoom: 15,
    center: lLatLng,
    mapTypeId: google.maps.MapTypeId.ROADMAP
  };


  var gmapOptions = {
    zoom: 15,
    center: gLatLng,
    mapTypeId: google.maps.MapTypeId.ROADMAP
  };

  lmap = new google.maps.Map(document.getElementById('leeds-map-canvas'),
  lmapOptions);

  gmap = new google.maps.Map(document.getElementById('guiseley-map-canvas'),
  gmapOptions);


  var gmarker = new google.maps.Marker({
    position: gLatLng,
    map: gmap,
    title:"PhysioMed"
  });

  var lmarker = new google.maps.Marker({
    position: lLatLng,
    map: lmap,
    title:"PhysioMed"
  });
}

google.maps.event.addDomListener(window, 'load', initialize);

</script>

<div id="intro-area">
  <div class="full">
    <h1><%= @page.title %></h1>

    <%= raw @page.content %>

    <hr />
  </div>
</div>

<div class="clear"></div>

<div id="map-footer">
  <div class="main_container">
    <div class="green-header">
      <h2>Find Us</h2>
      <span class="arrow"> </span>
    </div>

