<h2>Link to page: <%= link_to @seo_entry.nominal_url, @seo_entry.nominal_url, :target => '_blank' %></h2>

<%= form_for([:admin, @seo_entry]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic' do -%>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    
    <div class="field">
      <%= f.label :meta_description %><br />
      <%= f.text_area :meta_description %>
    </div>
    
    <div class="field">
      <%= f.label :meta_tags %><br />
      <%= f.text_area :meta_tags %>
    </div>

    <div class="field">
      <%= f.label :in_sitemap %><br />
      <%= f.check_box :in_sitemap %>
    </div>
  <% end -%>
  
  <%= field_set_tag 'Rich Snippets' do -%>
    <div class="field">
      <%= f.label :item_reviewed %><br />
      <%= f.text_field :item_reviewed %>
    </div>

    <div class="field">
      <%= f.label :rating %><br />
      <%= f.number_field :rating, min: 0.0, max: 5, step: 0.5 %>
    </div>

    <div class="field">
      <%= f.label :max_rating %><br />
      <%= f.number_field :max_rating, min: 0, max: 5, step: 1 %>
    </div>

    <div class="field">
      <%= f.label :number_of_reviews %><br />
      <%= f.number_field :number_of_reviews, step: 1 %>
    </div>
  <% end -%>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>					
