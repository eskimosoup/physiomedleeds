<%= form_for([:admin, @testimonial]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic' do -%>

    <div class="field">
      <%= f.label :author %><br />
      <%= f.text_field :author %>
    </div>

    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content %>
    </div>

    <div class="field">
      <%= f.label :display %><br />
      <%= f.check_box :display %>
    </div>

  <% end -%>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
