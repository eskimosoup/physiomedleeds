<%= form_for([:admin, @price]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic' do -%>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :price %><br />
      <%= f.text_area :price %>
    </div>

    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content, class: 'tinymce' %>
    </div>

    <div class="field">
      <%= f.label :image %><br />
      <%= f.image_field :image %>
    </div>


    <div class="field">
      <%= f.label :display %><br />
      <%= f.check_box :display, :checked => "checked" %>
    </div>

    <div class="field">
      <%= f.label :show_read_more, "Show read more" %><br />
      <%= f.check_box :show_read_more, :checked => "checked" %>
    </div>

  <% end -%>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
