<%= form_for([:admin, @team_member]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic' do -%>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :qualification %><br />
      <%= f.text_field :qualification %>
    </div>

    <div class="field">
      <%= f.label :role %><br />
      <%= f.text_field :role %>
    </div>

    <div class="field">
      <%= f.label :bio %><br />
      <%= f.text_area :bio, class: "tinymce" %>
    </div>

    <div class="field">
      <%= f.label :image %><br />
      <%= f.image_field :image %>
    </div>

    <div class="field">
      <%= f.label :display %><br />
      <%= f.check_box :display, checked: true %>
    </div>

  <% end -%>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
