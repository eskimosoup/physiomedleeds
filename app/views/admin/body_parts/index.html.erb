<% title BodyPart.model_name.human.pluralize %>

<div class="admin_functions">
  <%= link_to "New #{ BodyPart.model_name.human }", new_admin_body_part_path %>
</div>

<%= informant_table @body_parts, {
      :headings => [ 'Name', 'Sections', 'Display', '', '', '' ],
      :body => [ :name,
                lambda{|x| link_to "Sections (#{x.body_part_sections.count})", admin_body_part_body_part_sections_path(x) },
                it_ajax_toggle(:display),
                it_edit_images(:image),
                it_edit,
                it_destroy ]
    } %>
