<%= form_for([:admin, @body_part, @body_part_section]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic' do -%>
    <%= f.hidden_field :body_part_id %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content, :class => "tinymce" %>
    </div>

  <% end -%>

  <%= field_set_tag 'Settings' do -%>

    <div class="field">
      <%= f.label :display %><br />
      <%= f.check_box :display %>
    </div>

  <% end -%>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
