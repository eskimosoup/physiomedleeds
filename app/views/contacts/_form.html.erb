<%= form_for @contact do |f| %>
  <% if f.object.errors.any? %>
    <div class="error-messages">
      <ul>
        <% for message in f.object.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name, 'Name: *' %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :contact_number, 'Contact No: *' %>
    <%= f.text_field :contact_number %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field textarea">
    <%= f.label :message, 'Message: *' %>
    <%= f.text_area :message %>
  </div>

  <div class="actions">
    <%= f.submit "Send Message", :class => 'green-button' %>
  </div>
<% end %>