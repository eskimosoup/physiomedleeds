<html lang="en">
  <body>
    <h2>Physio Med Treatment Booking Request</h2>

    <p>
      <strong>Name:</strong>
      <br />
      <%= @booking.name %>
    </p>

    <% unless @booking.contact_number.blank? %>
    <p>
      <strong>Contact Number:</strong>
      <br />
      <%= @booking.contact_number %>
    </p>
    <% end %>

    <% unless @booking.email.blank? %>
      <p>
        <strong>Email:</strong>
        <br />
        <%= mail_to(@booking.email) %>
      </p>
    <% end %>

    <p>
      <strong>Message:</strong>
      <br />
      <%= @booking.message %>
    </p>

    
    <p>
      <strong>Date:</strong>
      <br />
      <%= l @booking.date, :format => :long %>
    </p>
    
    
    <p>
      <strong>Time:</strong>
      <br />
      <%= l @booking.time, :format => :booking %>
    </p>
    
    
    <p>
      <strong>Clinic:</strong>
      <br />
      <%= @booking.clinic %>
    </p>
    
    <p>
      <strong>Treatment:</strong>
      <br />
      <%= @booking.treatment.name %>
    </p>
  </body>
</html>
