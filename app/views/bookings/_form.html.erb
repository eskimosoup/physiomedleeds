<%= form_for(@booking) do |f| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% @booking.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :treatment_id, 'Treatment: *' %><br />
    <%= f.select :treatment_id, Treatment.where(:display => true).order(:name).map{|x| [x.name, x.id]}, prompt: 'Please select a treatment' %>
    <div id="warning-output"></div>
  </div>

  <div class="field">
    <%= f.label :clinic, 'Clinic: *' %><br />
    <%= f.select :clinic, ['Physio Med Leeds', 'Physio Med Guiseley'] %>
  </div>

  <div class="field">
    <%= f.label :date, 'Date: *' %><br />
    <%= f.text_field :date, :class => "datepicker", :autocomplete => "off" %>
  </div>
  <div class="field">
    <%= f.label :time, 'Time: *' %><br />
    <%= f.time_select :time, minute_step: 30 %>
  </div>
  <div class="field">
    <%= f.label :name, 'Name: *' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :contact_number, 'Contact Number:' %><br />
    <%= f.text_field :contact_number %>
  </div>
  <div class="field">
    <%= f.label :email, 'Email: *' %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :message, 'Message: *' %><br />
    <%= f.text_area :message %>
  </div>
  <div class="actions">
    <%= f.submit "Request Booking", data: { disable_with: "Please wait..." } %>
  </div>
<% end %>
